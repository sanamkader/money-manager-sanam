<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_monthlyreportsearch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39c9bb"
    android:orientation="vertical"
    tools:context="com.example.y.moneymanager.MonthlyreportsearchActivity">
    <EditText
        android:id="@+id/et_year_monthlyreportsactivity"
        android:hint="Enter The YEAR"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/et_month_monthlyreportsactivity"
        android:hint="Enter The Month"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_search_monthlyreportsactivity"
            android:text="SEARCH"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/bt_clear_monthlyreportsactivity"
            android:text="CLEAR"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_showmonthlyreport"
        android:text=""
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="CALCULATE TOTAL MONTHLY EXPENSE"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/bt_calculatemonthlyexpense"
            android:text="CALCULATE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

    </LinearLayout>

    <TextView
        android:text=""
        android:textColor="#000000"
        android:id="@+id/tv_totalmonthlyexpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text=""
        android:textColor="#000000"
        android:id="@+id/tv_monthlybalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
