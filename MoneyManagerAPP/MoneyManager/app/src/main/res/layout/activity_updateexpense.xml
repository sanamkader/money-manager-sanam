<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_updateexpense"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#ebd799"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.y.moneymanager.UpdateexpenseActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE EXPENSE"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/et_searchmonth_updateexpenseactivity"
        android:hint="search for month"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_searchcategory_updateexpenseactivity"
        android:hint="search for category"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />
    <EditText
        android:id="@+id/et_searchdate_updateexpenseactivity"
        android:textColor="#000000"
        android:hint="search for date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number" />
    <Button
        android:id="@+id/bt_search_updateexpenseactivity"
        android:text="SEARCH"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_newyear_updateexpenseactivity"
        android:textColor="#000000"
        android:hint="enter new year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />
    <EditText
        android:id="@+id/et_newmonth_updateexpenseactivity"
        android:textColor="#000000"
        android:hint="enter new month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />
    <EditText
        android:id="@+id/et_newweek_updateexpenseactivity"
        android:textColor="#000000"
        android:hint="enter new week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number" />
    <EditText
        android:id="@+id/et_newdate_updateexpenseactivity"
        android:textColor="#000000"
        android:hint="enter new date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:inputType="number" />
    <EditText
        android:id="@+id/et_newcategory_updateexpenseactivity"
        android:textColor="#000000"
        android:hint="enter new category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />
    <EditText
        android:id="@+id/et_newamount_updateexpenseactivity"
        android:textColor="#000000"
        android:hint="enter new amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_update_updateexpenseactivity"
            android:text="UPDATE"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_clear_updateexpenseactivity"
            android:text="CLEAR"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

    </RelativeLayout>


</LinearLayout>
