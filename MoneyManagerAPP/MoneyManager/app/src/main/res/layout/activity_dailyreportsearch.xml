<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dailyreportsearch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39c9bb"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.example.y.moneymanager.DailyreportsearchActivity">
    <EditText
        android:id="@+id/et_month_dailyreportsactivity"
        android:hint="Enter The Month"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/et_week_dailyreportsactivity"
        android:hint="Enter The Week"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/et_date_dailyreportsactivity"
        android:hint="Enter The Date"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_search_dailyreportsactivity"
            android:text="SEARCH"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/bt_clear_dailyreportsactivity"
            android:text="CLEAR"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_showdailyreport"
        android:text=""
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="CALCULATE TOTAL DAILY EXPENSE"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/bt_calculatedailyexpense"
            android:text="CALCULATE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

    </LinearLayout>

    <TextView
        android:text=""
        android:textColor="#000000"
        android:id="@+id/tv_totaldailyexpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_dailybalance"
        android:text=""
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
