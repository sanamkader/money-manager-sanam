<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_searchanddelete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99d6eb"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.y.moneymanager.SearchanddeleteActivity">



    <EditText
        android:layout_marginTop="30dp"
        android:hint="Search month"
        android:id="@+id/et_searchmonth"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginTop="30dp"
        android:hint="Search Date"
        android:id="@+id/et_searchdate"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="30dp"
        android:hint="Search category"
        android:id="@+id/et_searchcategory"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_searchresults"
        android:text="search results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:text="SEARCH"
            android:id="@+id/bt_searchcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/bt_clear_searchanddeleteactivity"
            android:text="CLEAR"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
    </RelativeLayout>


    <Button
        android:id="@+id/bt_deletecategory"
        android:text="DELETE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>




</LinearLayout>
