<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_addexpense"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDA0DD"
    android:orientation="vertical"
    tools:context="com.example.y.moneymanager.AddexpenseActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_enteryear"
        android:hint="Eg:2016"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"
        android:padding="20dp"
        android:inputType="number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_entermonth"
        android:hint="Eg:JANUARY"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"
        android:padding="20dp"
        android:inputType="text" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_enterweek"
        android:hint="Eg:1,2,3,4"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"
        android:padding="20dp"
        android:inputType="number" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_enterdate"
        android:hint="Eg:ddmmyy"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"
        android:padding="20dp"
        android:inputType="number" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_entercategory"
        android:hint="Eg:Fees,Shopping,Food"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"
        android:padding="20dp"
        android:inputType="text" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_enterexpense"
        android:hint="Eg:1000"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"
        android:padding="20dp"
        android:inputType="number" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/bt_addexpenseactivitybutton"
        android:text="ADD" />


</LinearLayout>
